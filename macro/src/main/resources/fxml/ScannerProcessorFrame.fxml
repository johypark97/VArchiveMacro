<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="BorderPane" xmlns="http://javafx.com/javafx/21.0.6">
  <top>
    <VBox>
      <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
          <children>
            <Label text="%scanner.processor.frame.reviewLabel" fx:id="reviewLabel"/>
            <Label text="❭"/>
            <Label text="%scanner.processor.frame.analysisLabel" fx:id="analysisLabel"/>
            <Label text="❭"/>
            <Label text="%scanner.processor.frame.uploadLabel" fx:id="uploadLabel"/>
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER" fx:id="headerBox">
              <children>
                <Label text="Label" fx:id="headerLabel"/>
              </children>
            </HBox>
            <Button text="%scanner.processor.frame.captureImageViewerButton" fx:id="captureImageViewerButton"/>
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
          </padding>
        </HBox>
        <Separator/>
      </children>
    </VBox>
  </top>
  <bottom>
    <HBox>
      <children>
        <ToolBar HBox.hgrow="ALWAYS" nodeOrientation="LEFT_TO_RIGHT">
          <items>
            <Button text="Button" fx:id="leftButton"/>
          </items>
        </ToolBar>
        <ToolBar HBox.hgrow="ALWAYS" nodeOrientation="RIGHT_TO_LEFT">
          <items>
            <Button text="Button" fx:id="rightButton"/>
          </items>
        </ToolBar>
      </children>
    </HBox>
  </bottom>
</fx:root>
