<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="BorderPane" xmlns="http://javafx.com/javafx/21">
  <top>
    <VBox spacing="10.0">
      <children>
        <Label text="Message" fx:id="messageLabel"/>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
          <children>
            <Label text="Song"/>
            <TextField HBox.hgrow="ALWAYS" editable="false" focusTraversable="false" fx:id="songTextField"/>
          </children>
        </HBox>
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
    </VBox>
  </top>
  <center>
    <SplitPane fx:id="centerSplitPane">
      <items>
        <VBox spacing="10.0">
          <children>
            <HBox alignment="CENTER" spacing="10.0">
              <children>
                <Label text="Search"/>
                <TextField HBox.hgrow="ALWAYS" prefColumnCount="0" fx:id="searchTextField"/>
                <Button text="Reset" fx:id="resetButton"/>
                <CheckBox text="Find all" fx:id="findAllCheckBox"/>
              </children>
            </HBox>
            <ScrollPane VBox.vgrow="ALWAYS" fitToHeight="true" fitToWidth="true">
              <content>
                <ListView fx:id="captureDataListView"/>
              </content>
            </ScrollPane>
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
          </padding>
        </VBox>
      </items>
    </SplitPane>
  </center>
  <bottom>
    <ButtonBar buttonMinWidth="100.0">
      <buttons>
        <Button text="Link" fx:id="linkButton"/>
        <Button text="Unlink" fx:id="unlinkButton"/>
        <Button text="Close" fx:id="closeButton"/>
      </buttons>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
    </ButtonBar>
  </bottom>
</fx:root>
